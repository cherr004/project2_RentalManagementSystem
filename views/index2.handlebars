<div class="container pt-5">
  <!-- This row is only for layout, If we need to add a sidebar the only thing you
  need to do is modify the width of this column and add another column to the
  desired width. All the content inside this columns won't be affected. -->
  <div class="row">
    <div class="col-sm-12">

      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <div class="form-group">
            <label for="subject">Subject:</label>
            <input type="userInfo" class="form-control" id="subject" aria-describedby="userHelp" placeholder="Subject">
          </div>
          <div class="form-group">
            <label for="contact">Email:</label>
            <input type="userInfo" class="form-control" id="contact" aria-describedby="userHelp" placeholder="Your Email">
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" id="message" rows="4"></textarea>
            <div id="contactMsg"></div>
            <hr>
            <button id="contactBtn" type="button" class="btn btn-dark">Contact Us</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Login-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">User Login</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Username:</label>
          <input type="userInfo" class="form-control" id="username" aria-describedby="userHelp" placeholder="Enter Username">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password:</label>
          <input type="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div id="errorMsg" class="text-danger"> </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="loginBtn" type="button" class="btn btn-dark">Login</button>
      </div>
    </div>
  </div>
</div>



<script src="/js/main.js" type="text/javascript"></script>
